<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@drawable/toolbar_background"
        android:elevation="120dp"
        android:layout_height="?attr/actionBarSize"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/parentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#1A1516"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yash Agrawal"
            android:textStyle="bold"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yash_agrawal931"
            android:textStyle="bold"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email address : yashagrawal@gmailcom"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textAlignment="textStart"
            android:layout_margin="10dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-medium"
            android:elevation="5dp"
            android:padding="3dp"
            android:textColor="#E40C0C"/>
        <TextView
            android:id="@+id/logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:layout_gravity="start"
            android:elevation="5dp"
            android:fontFamily="sans-serif-medium"
            android:padding="3dp"
            android:textColor="#E40C0C"/>
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poetries Published"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/poetriesPublished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>



